<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/museic"
        android:layout_alignBottom="@+id/btnSuggestSong"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:id="@+id/" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suggest_song"
        android:id="@+id/btnSuggestSong"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp"
        android:width="300dp"
        android:onClick="suggestSong" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_data"
        android:id="@+id/btnRecordData"
        android:layout_below="@+id/btnSuggestSong"
        android:layout_alignLeft="@+id/btnSuggestSong"
        android:layout_alignStart="@+id/btnSuggestSong"
        android:layout_alignRight="@+id/btnSuggestSong"
        android:layout_alignEnd="@+id/btnSuggestSong"
        android:onClick="recordData"
        android:clickable="true" />

</RelativeLayout>
